<script type="text/javascript">
  function updateColor(type, id) {
    let color = '#a6bbcf'; // default and request
    if (type === "waitFor") {
      color = '#C7E9C0'
    } else if (type === "block") {
      color = '#FFAAAA'
    }
    let path = "#" + id.replace(".", "\\.") + " > rect";
    $(path).css("fill", color)
  }

  RED.nodes.registerType('{{name}}', {
    category: '{{category}}',
    color: '{{color}}',
    defaults: {
      {{defaults}}
      name: { value: "" },
      eventType: { value: "request" },
    },
    inputs: {{numInput}},
    outputs: {{numOutput}},
    icon: "{{icon}}",
    label: {{label}},
    paletteLabel: '{{paletteLabel}}',
    outputLabels: {{outputLabels}},
    oneditprepare: function() {
      var that = this;
      {{oneditprepare}}
    },
  });
</script>

